@model AgentPortal.ViewModels.AgentCodeViewModel
<h2>New Agent</h2>

<form action="/home/newAgent" method="post" style="display: grid; padding: 1em">
    <label for="agentCode">Agent Code:</label>
    <input name="agentCode" id="agentCode" placeholder="AgentCode" value="@Model.AgentCode" disabled/>

    <label for="agentName">Agent Name: </label>
    <input name="agentName" id="agentName" placeholder="AgentName" />

    <label for="workingArea">Working Area: </label>
    <input name="workingArea" id="commission" placeholder="WorkingArea" />

    <label for="commission">Commission: </label>
    <input name="commission" id="commission" placeholder="Commission" type="number" step=".01" />

    <label for="phoneNo">Phone No: </label>
    <input name="phoneNo" id="phoneNo" placeholder="1234567890" />

    <button type="submit" style="margin-top: 1em">Submit</button>
</form>